{
  "name": "learnpad",
  "version": "0.0.1",
  "description": "Web-based HTML/CSS/JS editor for beginners",
  "dependencies": {
    "brace": "^0.5.1",
    "browserify": "^10.2.4",
    "csslint": "^0.10.0",
    "htmllint": "^0.2.4",
    "jscs": "1.13.1",
    "jshint": "^2.8.0",
    "node-static": "^0.7.6",
    "react": "^0.13.3",
    "reactify": "^1.1.1",
    "watchify": "^3.2.3"
  },
  "engines": {
    "node": "0.12.x"
  },
  "scripts": {
    "start": "static ./static",
    "build": "browserify src/application.js -o static/compiled/bundle.js",
    "watch": "watchify src/application.js -o static/compiled/bundle.js --debug --verbose"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
