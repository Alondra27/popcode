{
  "name": "learnpad",
  "version": "0.0.1",
  "description": "Web-based HTML/CSS/JS editor for beginners",
  "contributors": [
    {
      "name": "Mat Brown",
      "email": "mat.a.brown@gmail.com",
      "url": "https://github.com/outoftime"
    }, {
      "name": "Alejandro AR",
      "url": "https://github.com/kinduff"
    }
  ],
  "dependencies": {
    "brace": "^0.5.1",
    "browserify": "^10.2.4",
    "bulkify": "^1.1.1",
    "css": "^2.2.1",
    "es6-promise": "^2.3.0",
    "htmllint": "^0.2.4",
    "i18next-client": "^1.10.2",
    "jscs": "1.13.1",
    "jshint": "^2.8.0",
    "lodash": "^3.10.0",
    "node-static": "^0.7.6",
    "PrettyCSS": "^0.3.10",
    "react": "^0.13.3",
    "reactify": "^1.1.1",
    "watchify": "^3.2.3"
  },
  "engines": {
    "node": "0.12.x"
  },
  "scripts": {
    "start": "./node_modules/.bin/static ./static -a 0.0.0.0 -p ${PORT:-8080}",
    "build": "./node_modules/.bin/browserify src/application.js -o static/compiled/bundle.js",
    "watch": "./node_modules/.bin/watchify src/application.js -o static/compiled/bundle.js --debug --verbose",
    "postinstall": "npm run build"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
