{
  "name": "learnpad",
  "version": "0.0.1",
  "description": "Web-based HTML/CSS/JS editor for beginners",
  "contributors": [
    {
      "name": "Mat Brown",
      "email": "mat.a.brown@gmail.com",
      "url": "https://github.com/outoftime"
    },
    {
      "name": "Alejandro AR",
      "url": "https://github.com/kinduff"
    }
  ],
  "dependencies": {
    "PrettyCSS": "^0.3.10",
    "brace": "^0.5.1",
    "brfs": "^1.4.1",
    "browserify": "^10.2.6",
    "bulkify": "^1.1.1",
    "classnames": "^2.1.5",
    "css": "^2.2.1",
    "es6-promise": "^2.3.0",
    "flux": "^2.0.3",
    "htmllint": "^0.2.4",
    "i18next-client": "^1.10.2",
    "jscs": "^1.13.1",
    "jshint": "^2.8.0",
    "keymirror": "^0.1.1",
    "localforage": "^1.2.7",
    "lodash": "^3.10.0",
    "moment": "^2.10.6",
    "node-static": "^0.7.6",
    "react": "^0.13.3",
    "reactify": "^1.1.1",
    "strictify": "^0.2.0",
    "watchify": "^3.2.3"
  },
  "engines": {
    "node": "0.12.x"
  },
  "scripts": {
    "start": "./node_modules/.bin/static ./static -a 0.0.0.0 -p ${PORT:-8080}",
    "build": "./node_modules/.bin/browserify src/application.js -o static/compiled/bundle.js",
    "watch": "./node_modules/.bin/watchify src/application.js -o static/compiled/bundle.js --debug --verbose",
    "lint": "./node_modules/.bin/eslint --ext .js,.jsx --plugin react src || true",
    "postinstall": "npm run build"
  },
  "browserify": {
    "transform": [
      "reactify",
      "brfs",
      "strictify"
    ]
  },
  "devDependencies": {
    "eslint": "^1.4.1",
    "eslint-plugin-react": "^3.3.2"
  }
}
